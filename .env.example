#NODE ENVIRONMENT
NODE_ENV=development

#LOG LEVELS
# There are various log levels in pino = fatal, error, warn, info, debug, trace
LOG_LEVEL=debug

# PORT NUMBER
PORT=8000

# DATABASE URL
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/postgres

# CRYPTO-PASSWORD
# There are various hashing algos built in bun =  bcrypt,argon2d,argon2i,argon2id
CRYPTO_PASSWORD_ALGORITHIM=argon2id
CRYPTO_PASSWORD_MEMORY_COST=898
CRYPTO_PASSWORD_TIME_COST=789

# JWT 
# Here write expiration duration in seconds i.e in numbers eg : 60sec as 60
ACCESS_SECRET_KEY=your_secret_key
ACCESS_EXPIRATION_DURATION=10
REFRESH_SECRET_KEY=your_secret_key
REFRESH_EXPIRATION_DURATION=10

# REDIS URL
REDIS_URL=redis://127.0.0.1:6379