{
  "name": "knozichat-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "test": "test vitest",
    "docker:up": "docker compose up",
    "db:generate": "bun drizzle-kit generate --config=./src/configs/drizzle.config.ts",
    "db:migrate": "bun drizzle-kit migrate --config=./src/configs/drizzle.config.ts",
    "db:push": "bun drizzle-kit push --config=./src/configs/drizzle.config.ts",
    "db:pull": "bun drizzle-kit pull --config=./src/configs/drizzle.config.ts",
    "db:check": "bun drizzle-kit check --config=./src/configs/drizzle.config.ts",
    "db:up": "bun drizzle-kit up --config=./src/configs/drizzle.config.ts",
    "db:studio": "bun drizzle-kit studio --config=./src/configs/drizzle.config.ts",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/zod-openapi": "0.19.8",
    "@scalar/hono-api-reference": "^0.9.9",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "0.5.1",
    "hono": "^4.8.4",
    "hono-pino": "^0.9.1",
    "ioredis": "^5.6.1",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.3",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.15",
    "@types/pg": "^8.15.4",
    "@types/validator": "^13.15.2",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "vitest": "^3.2.4"
  }
}
