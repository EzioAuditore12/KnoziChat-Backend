{
  "name": "knozichat-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bun dist/src/index.js",
    "dev": "bun run --watch src/index.ts",
    "build": "tsc && tsc-alias",
    "test":"test vitest",
    "db:generate": "bun drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "bun drizzle-kit migrate --config=drizzle.config.ts",
    "db:push": "bun drizzle-kit push --config=drizzle.config.ts",
    "db:pull": "bun drizzle-kit pull --config=drizzle.config.ts",
    "db:check": "bun drizzle-kit check --config=drizzle.config.ts",
    "db:up": "bun drizzle-kit up --config=drizzle.config.ts",
    "db:studio": "bun drizzle-kit studio --config=drizzle.config.ts",
    "lint": "biome check src",
    "lint:format": "biome check src --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono/zod-openapi": "0.19.8",
    "@scalar/hono-api-reference": "0.9.2",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "0.5.1",
    "hono": "^4.8.4",
    "hono-pino": "^0.9.1",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.13",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.16",
    "vitest": "^3.2.4"
  }
}
