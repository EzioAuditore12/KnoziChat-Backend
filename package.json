{
  "name": "knozichat-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node ./dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "typecheck": "tsc --noEmit",
    "test": "test vitest",
    "generate-fake:users": "bun src/seeders/fake-users.js",
    "docker:up": "docker compose up",
    "db:generate": "pnpm exec drizzle-kit generate --config=./src/configs/drizzle.config.ts",
    "db:migrate": "pnpm exec drizzle-kit migrate --config=./src/configs/drizzle.config.ts",
    "db:push": "pnpm exec drizzle-kit push --config=./src/configs/drizzle.config.ts",
    "db:pull": "pnpm exec drizzle-kit pull --config=./src/configs/drizzle.config.ts",
    "db:check": "pnpm exec drizzle-kit check --config=./src/configs/drizzle.config.ts",
    "db:up": "pnpm exec drizzle-kit up --config=./src/configs/drizzle.config.ts",
    "db:studio": "pnpm exec drizzle-kit studio --config=./src/configs/drizzle.config.ts",
    "lint": "pnpm exec check src",
    "lint:fix": "pnpm exec check src --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@hono-storage/node-disk": "^0.0.17",
    "@hono/node-server": "^1.18.1",
    "@hono/zod-openapi": "0.19.8",
    "@scalar/hono-api-reference": "^0.9.9",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.56.5",
    "busboy": "^1.6.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "0.5.1",
    "hono": "^4.8.4",
    "hono-pino": "^0.9.1",
    "ioredis": "^5.6.1",
    "node-appwrite": "^17.1.0",
    "nodemailer": "^7.0.5",
    "otpauth": "^9.4.0",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "stoker": "^1.4.3",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@faker-js/faker": "^9.9.0",
    "@types/bcrypt": "^6.0.0",
    "@types/busboy": "^1.5.4",
    "@types/node": "^24.0.15",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/validator": "^13.15.2",
    "drizzle-kit": "^0.31.4",
    "husky": "^9.1.7",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "vitest": "^3.2.4"
  }
}
