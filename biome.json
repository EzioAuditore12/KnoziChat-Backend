{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./src/db/migrations"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore":["./src/db/migrations"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style":{
				"noNonNullAssertion":"off"
			},
			"complexity":{
				"noForEach":"off",
				"noBannedTypes":"off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
